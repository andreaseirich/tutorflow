#!/bin/bash
# Pre-commit hook: format and lint Python files before commit.
# Install: git config core.hooksPath .githooks

set -e

STAGED_PY=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(py)$' || true)

if [ -z "$STAGED_PY" ]; then
    exit 0
fi

if ! command -v ruff &> /dev/null; then
    echo "Error: ruff not installed. Run: pip install ruff"
    exit 1
fi

echo "Running ruff format and ruff check --fix..."
ruff format backend/apps backend/tutorflow
ruff check backend/apps backend/tutorflow --fix

# Re-stage in case ruff modified any files
git add backend/apps backend/tutorflow 2>/dev/null || true

exit 0
